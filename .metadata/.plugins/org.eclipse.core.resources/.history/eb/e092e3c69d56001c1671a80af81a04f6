package com.projeto.viagem.repository;

import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;

import com.projeto.viagem.entity.Viagem;

public interface ViagemRepository extends JpaRepository<Viagem, Integer> {

	@Query("select v from viagem v join v.cliente c " +
	"where upper(c.nome) like upper( :nome ) and MONTH(v.data) = :mes")
	List<Viagem> buscaPorNomeMes(@Param("nome") String nome, @Param ("mes") Integer mes);




}
